#Create virtual machine
resource "azurerm_virtual_machine" "myterraformvm" {
    name                  = "myVM5"
    location              = "eastus"
    resource_group_name   = "myResourceGroup"
    network_interface_ids = ["/subscriptions/e11deb56-ea3d-4f77-972f-484b6543bb51/resourceGroups/myResourceGroup/providers/Microsoft.Network/networkInterfaces/myNIC"]
    vm_size               = "Standard_DS1_v2"

  delete_os_disk_on_termination = true

  delete_data_disks_on_termination = true
    storage_os_disk {
        name              = "myOsDisk5"
        caching           = "ReadWrite"
        create_option     = "FromImage"
        managed_disk_type = "Premium_LRS"
    }
    storage_image_reference {
        publisher = "Canonical"
        offer     = "UbuntuServer"
        sku       = "14.04.0-LTS"
        version   = "latest"
    }
    storage_data_disk {
    name              = "datadisk_new5"
    managed_disk_type = "Premium_LRS"
    create_option     = "Empty"
    caching           = "ReadWrite"
    lun               = 1
    disk_size_gb      = "10"
  }
    os_profile {
        computer_name  = "myvm5"
        admin_username = "azureuser"
    }
    os_profile_linux_config {
        disable_password_authentication = true
        ssh_keys {
            path     = "/home/azureuser/.ssh/authorized_keys"
           key_data = "ssh-rsa  azureuser@anita-Latitude-3460"
        }
    }
}

